<h1 class="text-center"> Projects </h1>

<div class="row">
    <div class="col-sm-2 my-4">
        <%= search_form_for @q do |f|%>
            <div class="form-group">
            <%= f.label :state_eq, "State" %>
            <%= f.select :state_eq, options_for_select(Project.states, @q.state_eq), {}, {class: 'form-control'} %>
            </div> 
            <%= f.submit "Search", class: "btn btn-outline-primary" %>
            <%= link_to "All", root_path, class: "btn btn-outline-primary"%>

        <% end  %>    
    </div> 
</div>
 
<div>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Start_date</th>
            <th scope="col">End_date</th>
            <th scope="col">State</th>
          </tr>
        </thead>
        <tbody>
            <% @projects.each do |project| %>
                <tr>
                  <td><%= project.name %></td>
                  <td><%= project.description %></td>
                  <td><%= project.start_date %></td>
                  <td><%= project.end_date %></td>
                  <td><%= project.state %></td>
                </tr>
            <%end%>
        </tbody>
    </table>
</div>
<div class="text-right my-3">
    <button type="button" class="btn btn-outline-primary">
        <%= link_to 'Crea un nuevo proyecto', projects_new_path %>
    </button>
</div>